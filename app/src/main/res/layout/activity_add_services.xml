                    app:layout_constraintStart_toStartOf="@+id/crew_cut"
                    app:layout_constraintTop_toBottomOf="@+id/crew_cut" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/temple_fade"
                    android:layout_width="match_parent"
